# Class named "item" for RPG items

# properties
item_properties=()

# properties IDs
name=0
stm_per_use=1
quantity=2

item.property() {
    if [ "$2" == "=" ]
    then
        item_properties[$1]=$3
    else
        echo ${item_properties[$1]}
    fi
}

item.name() {
    if [ "$1" == "=" ]
    then
        item.property name = "$2"
    else
        item.property name
    fi
}

item.stm_per_use() {
    if [ "$1" == "=" ]
    then
        item.property stm_per_use = "$2"
    else
        item.property stm_per_use
    fi
}

item.quantity() {
    if [ "$1" == "=" ]
    then
        item.property quantity = "$2"
    else
        item.property quantity
    fi
}

item.init() {
    if [ "$#" == "3" ]; then
        item.name = "$1"
        item.stm_per_use = "$2"
        item.quantity = "$3"
    else
        echo "Not enough arguments were given in item.init function."
        exit 0
    fi
}

item.echo() {
    if [ "$1" != "wpn" ]
    then
        echo "Item $(item.name) | Quantity: $(item.quantity) | STM per use: $(item.stm_per_use)" 
    else
        echo "$(item.name) DMG: $(item.quantity) SPU: $(item.stm_per_use)" 
    fi
}